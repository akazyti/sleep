{
  "name": "yarn-ts-starter",
  "version": "1.0.0",
  "description": "Start For Me",
  "main": "index.js",
  "keywords": [
    "Terminal"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "Akash Chaudhari",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@types/jest": "^24.9.0",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "babel-jest": "^24.9.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.16.9",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "test": "jest",
    "test:coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "start": "npm run build && node build/index.js",
    "start:dev": "nodemon",
    "build": "rimraf ./build && tsc && npm run lint",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "doc" : "rimraf ./doc && typedoc"
  },
  "dependencies": {},
  "jest": {
    "roots": [
      "<rootDir>/src/test"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  },
  "files": [
    "LICENSE",
    "Readme.md",
    "build/"
  ]
}
